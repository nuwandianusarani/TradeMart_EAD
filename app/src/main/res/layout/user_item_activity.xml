<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f1f1f1"
    tools:context=".UserOrderActivity">

    <!-- Title for the Order list -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders by Nuwandi Hewammaduma"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Hardcoded list of orders for the user -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintBottom_toTopOf="@id/btnBackToUsers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Order 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvProductName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product: AKG N700NCM2 Wireless Headphones"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvQuantity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: 2"
                        android:layout_marginEnd="16dp"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvPrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: $300"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOrderDate1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Date: 01-Oct-2024"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/tvOrderStatus1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Delivered"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Order 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvProductName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product: Samsung Galaxy S21"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvQuantity2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: 1"
                        android:layout_marginEnd="16dp"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: $800"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOrderDate2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Date: 28-Sep-2024"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/tvOrderStatus2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Pending"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Order 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvProductName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product: Sony WH-1000XM4"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvQuantity3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity: 1"
                        android:layout_marginEnd="16dp"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvPrice3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: $350"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOrderDate3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Date: 20-Sep-2024"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>

                <!-- Status -->
                <TextView
                    android:id="@+id/tvOrderStatus3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Shipped"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Button to go back to the user list -->
    <Button
        android:id="@+id/btnBackToUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Users"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
